-@title= 'Echo UI Driver List'
-@page_classes= 'user-profile'


.container.main-content

  =link_to '#', class: 'btn btn-back btn-link' do
    =image_tag('iconarrow-blue.svg')
    Back To Driver List

  .row
    .col-sm-6
      %section.content-container.profile-info
        .pull-right
          =link_to '#', alt: 'Do Not Disturb', class: 'btn btn-link btn-alert' do 
            =image_tag('icon-dnd.svg')
            Do Not Disturb
        %h1.profile-name.profile-name_driver
          =image_tag('icon-driver.svg', class: 'icon icon-driver')
          Driver Name
        
        %form
          %fieldset.fieldset
            .form-group
              %label First Name
              %input.form-control{:type => "email", :placeholder => "Driver Name"}
            .form-group
              %label Last Name
              %input.form-control{:type => "password", :placeholder => "Last Name"} 
            .form-group
              %label Preferred Language
              .select
                %select
                  %option{:value => "a"} English
                  %option{:value => "b"} Spanish
                  %option{:value => "c"} German
                  %option{:value => "d"} Polish              
                  %option{:value => "e"} Greek

          %fieldset.fieldset
            %legend Contact Information
            .form-group.has-error
              %label Email Address
              %input.form-control{:type => "email", :placeholder => "email@email.com"}
              %span.help-block This email address is currently in use
            .form-group
              %label Phone Number
              %input.form-control{:type => "password", :placeholder => "Last Name"} 
            .form-group
              %label Tractor Number
              %input.form-control{:type => "password", :placeholder => "Last Name"} 

            .form-group
              =link_to 'Remove User', '#', class: 'btn btn-link btn-alt'
              %button.btn.btn-default.pull-right{type: "submit"} Save Changes

    .col-sm-6
      %section.content-container
        %h2.section-header Batmobile Usage
  
        %ul.checklist
          %li.checklist-approved App installed 6 Months Ago
          %li.checklist-approved Tracking Enabled
          %li.checklist-approved Last Login: 09:00 CST, Fri Jun 17
  
      %section.content-container
        %h2.section-header Assignments

        .load-label Echo Assigned, Active
        
        .load-info

          .load-col.load-assignment
            %h2.load-number 123443211
            =link_to 'Change Driver', '#'
          
          .load-col.load-location.load-location_pickup
