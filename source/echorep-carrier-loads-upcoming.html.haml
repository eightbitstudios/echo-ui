= partial 'partials/header_load_management', locals: {link: 'upcoming'}
= partial 'partials/header_carrier_dashboard', locals: {loads: '14 Upcoming Loads', map: false}

.container.main-content
  %section
    .section-head
      = partial 'partials/filter_bar_upcoming'
    .row
      .col-md-12
        = partial 'partials/load_management_upcoming'

        %nav.pull-left
          %ul.pagination
            %li
              =link_to '#' do
                %span
                  =image_tag('navigation-chevrons-lt@2x.png', width: '9', height: '12')

            %li.active-page=link_to '1', '#'
            %li=link_to '2', '#'
            %li=link_to '3', '#'
            %li=link_to '4', '#'
            %li=link_to '5', '#'
            %li
              =link_to '#' do
                %span
                  =image_tag('navigation-chevrons-rt@2x.png', width: '9', height: '12')
        .results-count.pull-right
