.modal-header
  %button.close.btn-close{type: "button", data:{dismiss:"modal"}, aria:{label: "Close"}}
    %span{aria:{hidden:"true"}} &times;

  %table.table-slim.table-carrier-dashboard
    %tr
      %td.carrier-dashboard-load
        .detail-header Load
        %h1 123443211
      %td.carrier-dashboard-pickup
        .detail-header Pickup
        .location-text
          Washington-on-the-Brazos,
          TN
      %td.carrier-dashboard-arrow
        = image_tag 'icon-right-arrow-dark.svg'
      %td.carrier-dashboard-delivery
        .detail-header Delivery
        .location-text
          Winchester-on-the-Severn, TX
      %td.carrier-dashboard-driver
        .detail-header Driver
        .location-text Fred F

.modal-body
  %section.modal-sidebar
    = partial 'partials/modals/modal-sidebar-timeline'

  %section.modal-main-content
    .modal-main
      %form

        %p
          %strong What kind of update are you reporting?

        .form-inline.form-elements
          %label.radio.control.radio-alt
            %input{:type => "radio", :name => "optionsRadios1", :checked => "checked"}
            %span.control-indicator
            Location Update

          %label.radio.control.radio-alt
            %input{:type => "radio", :name => "optionsRadios1"}
            %span.control-indicator
            Report Trailer Drop

        %p
          %strong Enter the driver's location

        .search-location
          .search-form.search-form-modal.pull-left{role:"search"}
            .form-group
              %input.form-control.search-form-input.search-form-input_dark{type: "text", placeholder:"Enter City and State"}
              %button.btn.btn-default.btn-icon{type:"submit"}
                %svg{:height => "18px", :version => "1.1", :viewbox => "0 0 18 18", :width => "18px", :xmlns => "http://www.w3.org/2000/svg"}
                  %g.search-svg{:fill => "none", "fill-rule" => "evenodd", :stroke => "none", "stroke-width" => "1"}
                    %g#patterns{:stroke => "#FFFFFF", "stroke-width" => "2", :transform => "translate(-521.000000, -5581.000000)"}
                      %g{:id => "icon-search", :transform => "translate(522.000000, 5582.000000)"}
                        %circle#Oval{:cx => "6.33333333", :cy => "6.33333333", :r => "6"}
                        %path#Shape{:d => "M10.5753333,10.576 L15.5,15.5"}

.modal-footer.modal-footer-splits
  .btn-group-left
    %button.btn.btn-secondary.btn-prev{type: 'button'} Back

  .btn-group-center
    %button.btn.btn-link.btn-alt{type: 'button'} Cancel
    %button.btn.btn-secondary{type: 'button', disabled: 'disabled'} Save & close

  .btn-group-right
    %button.btn.btn-default.btn-next{type: 'button'} Skip