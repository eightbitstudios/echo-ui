#loads-accordion.panel-group{role:"tablist"}
  .panel
    #headingOne.panel-heading
      %h4.panel-title
        =link_to '#collapseOne', {:role => 'button', :data => {toggle: 'collapse', parent: '#loads-accordion'}, :aria => {expanded: "true", controls: "collapseOne"}} do
          <strong>PICKUP</strong> Memphis, TN 60655
          %span.stops-date 
            Today from 14:00-15:00 EST
            .caret

    #collapseOne.panel-collapse.collapse.in{role: "tabpanel"}
