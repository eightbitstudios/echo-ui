#loads-accordion.panel-group{role:"tablist"}
  .panel
    .panel-heading
      %h4.panel-title
        =link_to '#pickup-panel', {:role => 'button', :data => {toggle: 'collapse'}, :aria => {expanded: "true", controls: "pickup-panel"}} do
          <strong>PICKUP</strong> Memphis, TN 60655
          %span.stops-date 
            Today from 14:00-15:00 EST
            .caret

    #pickup-panel.panel-collapse.collapse.in{role: "tabpanel"}
      .panel-body.load-details
        .row
          .details-location.col-md-4
            %h5.small-header Location
            %span.loc-name Walmart Warehouse A34 
            %br
            %span.loc-addr1 555 W. Western
            %br
            %span.loc-addr2 Dock #123
            %br
            %span.loc-region Bartville, IN
            %br
            =link_to '#' do
              Open in Maps
              =image_tag('icon_window.svg')
          

