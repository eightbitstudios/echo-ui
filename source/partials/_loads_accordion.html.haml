        .row
          .details-location.col-md-4
            %h5.small-header Location
            %span.loc-name Walmart Warehouse A34 
            %br
            %span.loc-addr1 555 W. Western
            %br
            %span.loc-addr2 Dock #123
            %br
            %span.loc-region Bartville, IN
            %br
            =link_to 'Open In Maps', '#'
          
          .details-contact.col-md-3
            %h5.small-header Contact
            Bob Peterson
            %br
            (312) 555-1212

