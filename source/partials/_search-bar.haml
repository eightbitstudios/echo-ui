.search-bar.container
  %form.search-form.search-form_searching.pull-left{role:"search"}
    .form-group
      %input.form-control.search-form-input{type: "text", placeholder:"Find A Driver"}
      %button.btn.btn-default.btn-icon{type:"submit"}=image_tag('icon-search@2x.png', width: '16px', height: '16px')
      %span.search-loader 
        =image_tag('icon-loader-temp.svg')
      %span.search-results_count 3 Search Results
      %span.search-results_close
        =image_tag('icon-close-sm.svg')

      %ul.search-results_overlay
        %li.results-row
          .result-title Jonathan Williams
          .result-phone (773) 555-4567
          .result-numb  Tractor Number: 2003 1234

        %li.results-row       
          .result-title Mablelle William-shire
          .result-phone (773) 883-3890
          .result-numb  Tractor Number: 2003 1243

        %li.results-row       
          .result-title Ethel Williamson
          .result-phone (773) 555-4567
          .result-numb  Tractor Number: 2003 1234

  .filter-drivers.pull-left
